composite layer0 {
inputs: [ ./in ]
outputs: [ ./out ]
contains: {
  layer1 inputs: [./layer1/a] outputs: [./layer1/b]
  }
connections: {
    ./in [./layer1/a]
    ./layer1/b [./out]
  }
}

composite container1 {
  inputs: [./x]
  outputs: [./y]
  contains: { link hello inputs: [./hello/r] outputs: [./hello/s] }
}

leaf hello {
  inputs: [./r] outputs: [./s]
  initialize: {}
  contains: [ code greeter methods [str (string) ]
  handle: { 
    on r: send (./s, "hello")
    else: abort
  }
}
